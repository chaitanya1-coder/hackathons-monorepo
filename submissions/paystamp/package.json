{
  "name": "paystamp",
  "version": "1.0.0",
  "private": true,
  "description": "Cross-chain access protocol bridging Stellar payments with Polkadot access control",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "contracts:validate": "bash scripts/validate-contracts.sh",
    "contracts:deploy": "bash scripts/deploy-contracts.sh",
    "contracts:deploy:testnet": "bash scripts/deploy-contracts.sh testnet",
    "contracts:deploy:futurenet": "bash scripts/deploy-contracts.sh futurenet",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "test:e2e": "playwright test",
    "clean": "turbo run clean && rm -rf node_modules",
    "docker:up": "docker-compose -f infrastructure/docker/docker-compose.dev.yml up -d",
    "docker:down": "docker-compose -f infrastructure/docker/docker-compose.dev.yml down",
    "docker:logs": "docker-compose -f infrastructure/docker/docker-compose.dev.yml logs -f"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.7.4",
    "turbo": "^2.6.2",
    "typescript": "^5.9.3",
    "@playwright/test": "^1.45.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "packageManager": "npm@10.0.0"
}
